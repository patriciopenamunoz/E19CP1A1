<%= link_to 'Add new person', new_person_path, class: 'btn btn-success' %>
<br><br>
<table class="table">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @people.each do |person| %>
    <tr>
      <td><%= person.first_name %></td>
      <td><%= person.last_name %></td>
      <td><%= link_to 'Details', person_path(person.id), class: 'btn btn-primary' %></td>
    </tr>
    <% end %>
  </tbody>
</table>
